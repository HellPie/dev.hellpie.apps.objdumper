<resources>

    <style name="Dumper"><!-- Placeholder --></style>

    <style name="Dumper.Main"><!-- Placeholder --></style>

    <style name="Dumper.Main.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorFocusedHighlight">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:actionBarStyle">@style/Dumper.ActionBar</item>
    </style>

    <style name="Dumper.ActionBar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:elevation">8dp</item>
        <item name="titleTextColor">@color/colorAppBarTitle</item>
        <item name="android:textColor">@color/colorAppBarTitle</item>
    </style>

    <style name="Dumper.ActionBar.Title" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAppBarTitle</item>
    </style>

    <style name="Dumper.ActionBar.Subtitle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/colorAppBarSubtitle</item>
    </style>

</resources>